<section id="skills" class="skills-section">
  <div class="container">
    <div class="section-header animate-on-scroll">
      <h2>My Skills</h2>
      <div class="section-divider"></div>
    </div>
    
    <div class="skills-categories">
      <% categories.forEach(category => { %>
        <div class="skills-category animate-on-scroll">
          <h3><%= category %></h3>
          <div class="skills-grid">
            <% skills.filter(skill => skill.category === category).forEach(skill => { %>
              <div class="skill-card">
                <div class="skill-icon" data-icon="<%= skill.icon %>">
                  <!-- Icon will be loaded via CSS or JS -->
                </div>
                <h4 class="skill-name"><%= skill.name %></h4>
                <div class="skill-progress">
                  <% if (typeof skill.proficiency === 'number' && skill.proficiency >= 0 && skill.proficiency <= 100) { %>
                    <div class="progress-bar" style="width: '<%= skill.proficiency %>%'"></div>
                  <% } else { %>
                    <div class="progress-bar" style="width: '0%'"></div>
                  <% } %>
                </div>
                <span class="skill-percentage"><%= skill.proficiency %>%</span>
              </div>
            <% }); %>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</section>

<section id="projects" class="projects-section">
  <div class="container">
    <div class="section-header animate-on-scroll">
      <h2>Featured Projects</h2>
      <div class="section-divider"></div>
    </div>
    
    <div class="projects-grid">
      <% projects.forEach(project => { %>
        <div class="project-card animate-on-scroll">
          <div class="project-image">
            <img src="<%= project.image_url %>" alt="<%= project.title %>" loading="lazy">
          </div>
          <div class="project-content">
            <h3 class="project-title"><%= project.title %></h3>
            <p class="project-description"><%= project.description %></p>
            <div class="project-tech">
              <% project.technologies.forEach(tech => { %>
                <span class="tech-tag"><%= tech %></span>
              <% }); %>
            </div>
            <div class="project-links">
              <% if (project.github_url) { %>
                <a href="<%= project.github_url %>" class="project-link" target="_blank" rel="noopener noreferrer">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg>
                  <span>GitHub</span>
                </a>
              <% } %>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
    
    <div class="projects-cta animate-on-scroll">
      <a href="/projects" class="btn btn-primary">View All Projects</a>
    </div>
  </div>
</section>

